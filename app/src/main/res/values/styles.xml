<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>

        <!-- Dialog -->
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:dialogPreferenceStyle">@style/AppTheme.Dialog</item>

        <!-- Spinner -->
        <item name="android:spinnerStyle">@style/AppTheme.Bar.Filter.Spinner</item>
        <item name="android:spinnerItemStyle">@style/AppTheme.Bar.Filter.Spinner.Item</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.Bar.Filter.DropDown</item>
        <item name="android:spinnerDropDownItemStyle">
            @style/AppTheme.Bar.Filter.DropDownItem.Spinner
        </item>
        <item name="android:textAppearanceListItemSmall">
            @style/AppTheme.Bar.Filter.Spinner.ListItem
        </item>

        <item name="android:textColorPrimary">@color/filter_bar_spinner_dropdown_text_color</item>
        <item name="android:textColorSecondary">@color/filter_bar_text_color</item>
    </style>

    <style name="AppTheme.Base.Gray" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimaryGray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGray</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppTheme.TitleTextStyle</item>
    </style>

    <style name="AppTheme.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextAppearance.FreeSans" parent="android:TextAppearance">
        <item name="fontPath">fonts/FreeSans.ttf</item>
    </style>

    <style name="TextAppearance.FreeSansBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/FreeSansBold.ttf</item>
    </style>

    <style name="TextAppearance.FreeSansBoldOblique" parent="android:TextAppearance">
        <item name="fontPath">fonts/FreeSansBoldOblique.ttf</item>
    </style>

    <style name="TextAppearance.FreeSansOblique" parent="android:TextAppearance">
        <item name="fontPath">fonts/FreeSansOblique.ttf</item>
    </style>


    <style name="TextAppearance.RobotoBlack" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Black.ttf</item>
    </style>

    <style name="TextAppearance.RobotoBlackItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-BlackItalic.ttf</item>
    </style>

    <style name="TextAppearance.RobotoBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="TextAppearance.RobotoBoldCondensed" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-BoldCondensed.ttf</item>
    </style>

    <style name="TextAppearance.RobotoBoldCondensedItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-BoldCondensedItalic.ttf</item>
    </style>

    <style name="TextAppearance.RobotoBoldItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-BoldItalic.ttf</item>
    </style>

    <style name="TextAppearance.RobotoCondensed" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Condensed.ttf</item>
    </style>

    <style name="TextAppearance.RobotoCondensedItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-CondensedItalic.ttf</item>
    </style>

    <style name="TextAppearance.RobotoItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Italic.ttf</item>
    </style>

    <style name="TextAppearance.RobotoLight" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="TextAppearance.RobotoLightItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-LightItalic.ttf</item>
    </style>

    <style name="TextAppearance.RobotoMedium" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="TextAppearance.RobotoMediumItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-MediumItalic.ttf</item>
    </style>

    <style name="TextAppearance.RobotoRegular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="TextAppearance.RobotoThin" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-Thin.ttf</item>
    </style>

    <style name="TextAppearance.RobotoThinItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto-ThinItalic.ttf</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/blanco</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/more_dark_red</item>
        <item name="colorControlNormal">@color/more_dark_red</item>
        <item name="colorControlActivated">@color/more_dark_red</item>
    </style>


    <!--
    <item name="tabMaxWidth">@dimen/tab_max_width</item>
    <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>-->

    <!-- TabLayout-->
    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTheme.TabLayout.Tab</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="AppTheme.TabLayout.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white80</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Dialog-->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">

        <item name="android:padding">@dimen/dialog_padding</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Spinner  -->
    <style name="AppTheme.Bar.Filter" parent="AppTheme.Base">
        <!-- Spinner -->
        <item name="android:spinnerStyle">@style/AppTheme.Bar.Filter.Spinner</item>
        <item name="android:spinnerItemStyle">@style/AppTheme.Bar.Filter.Spinner.Item</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.Bar.Filter.DropDown</item>
        <item name="android:spinnerDropDownItemStyle">
            @style/AppTheme.Bar.Filter.DropDownItem.Spinner
        </item>
        <item name="android:textAppearanceListItemSmall">
            @style/AppTheme.Bar.Filter.Spinner.ListItem
        </item>

        <item name="android:textColorPrimary">@color/filter_bar_spinner_dropdown_text_color</item>
        <item name="android:textColorSecondary">@color/filter_bar_text_color</item>
    </style>

    <style name="AppTheme.Bar.Filter.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/filter_bar_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.Bar.Filter.DropDown" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@null</item>
    </style>

    <style name="AppTheme.Bar.Filter.Spinner.DropDown" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/filter_bar_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.Bar.Filter.Spinner.Item" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/filter_bar_text_color</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.Bar.TextAppearance.Widget.DropDownItem" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/filter_bar_spinner_dropdown_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.Bar.Filter.DropDownItem.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/filter_bar_spinner_dropdown_text_color</item>
    </style>

    <style name="AppTheme.Bar.Filter.Spinner.ListItem" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/filter_bar_text_color</item>
    </style>

</resources>
