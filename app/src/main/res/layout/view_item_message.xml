<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_message_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:gravity="right"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:id="@+id/message_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/incoming_message_bg"
        android:paddingLeft="20dp"
        android:paddingStart="20dp">

        <TextView
            android:id="@+id/username"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="christhoval"
            android:textAppearance="@style/TextAppearance.RobotoRegular"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/username">

        <TextView
            android:id="@+id/message"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="mensaje largo, esto es una prueba de un mensaje largo"
            android:textAppearance="@style/TextAppearance.RobotoMedium"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/message_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="10:50"
            android:textAppearance="@style/TextAppearance.RobotoLight"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>